ALGORITHM reader
VAR
    ch: CHAR;
    vowel: CHAR;
    text: STRING := "" ;
    word_count, char_length, vowel_count: INTEGER := 0;
BEGIN
    REPEAT
        Read(ch);//Read char
        text = text + ch; //Concatenate into text 
        if(ch == " " OR ch == "."){
        word_count = word_count + 1; // increase word count after space or .
        }
    UNTIL (char == ".")//Stop when user enters .

    char_length = text.length
        Write(char_length)
        Write(word_count)

    FOR vowel FROM word.length-1 TO 0 STEP step 1 DO 
        if(vowel == "a"){
            vowel_count += 1  //increase vowel count
        }else if(vowel == "e"){
            vowel_count += 1
        }else if(vowel == "i"){
            vowel_count += 1
        }else if(vowel == "o"){
            vowel_count += 1
        }else if(vowel == "u"){
            vowel_count += 1
        }else{
            vowel_count = vowel_count
        }
        Write(vowel_count)
    END_FOR

END